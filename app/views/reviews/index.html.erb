<h2>Reviews of <%= @restaurant.name%></h2>


<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Rating</th>
      <th>Written on</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td><%= review.rating %></td>
        <td><%= review.created_at.strftime("%d/%m/%Y")%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Leave a new review', new_restaurant_review_path %>
